<p style="color: green"><%= notice %></p>

<h1>Item Details</h1>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-fixed-columns table-compact">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Tax rate</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @item.id %></td>
        <td><%= @item.name %></td>
        <td><%= @item.price %></td>
        <td><%= @item.tax_rate %></td>
        <td><%= @item.description %></td>
      </tr>
    </tbody>
  </table>
</div>

<%= link_to "Back to Items", items_path %>
