<div id="<%= dom_id sales_line %>">
  <p>
    <strong>Item name:</strong>
    <%= sales_line.item_name %>
  </p>

  <p>
    <strong>Quantity:</strong>
    <%= sales_line.quantity %>
  </p>

  <p>
    <strong>Discount percentage:</strong>
    <%= sales_line.discount_percentage %>
  </p>

  <p>
    <strong>Tax amount:</strong>
    <%= sales_line.tax_amount %>
  </p>

  <p>
    <strong>Price after discount:</strong>
    <%= sales_line.price_after_discount %>
  </p>

</div>
